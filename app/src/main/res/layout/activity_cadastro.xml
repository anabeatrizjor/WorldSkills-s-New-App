<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/greenPastel"
    tools:context=".CadastroActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logoCadastro"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/textViewCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:textColor="@color/blueDark"
                android:layout_below="@id/logoCadastro"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/nomeInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:fontFamily="@font/poppins"
                android:background="@drawable/normal_border"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:layout_below="@+id/textViewCadastro"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/usernameInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:fontFamily="@font/poppins"
                android:background="@drawable/normal_border"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:layout_below="@+id/nomeInputCadastro"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/senhaInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:padding="5dp"
                android:background="@drawable/normal_border"
                android:fontFamily="@font/poppins"
                android:inputType="textPassword"
                android:layout_below="@+id/usernameInputCadastro"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/senhaConfirmInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Confirmar senha"
                android:padding="5dp"
                android:background="@drawable/normal_border"
                android:fontFamily="@font/poppins"
                android:inputType="textPassword"
                android:layout_below="@+id/senhaInputCadastro"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btnCadastroCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blueDark"
                android:text="Cadastro"
                android:textColor="@color/backgroundColor"
                android:fontFamily="@font/poppins_semibold"
                android:layout_below="@+id/senhaConfirmInputCadastro"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

           <ImageView
               android:id="@+id/backArrowCadastro"
               android:layout_width="60dp"
               android:layout_height="40dp"
               android:src="@drawable/previous_arrow"
               android:layout_marginTop="40dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>