<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainH"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoricoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/blueDark">

                <ImageView
                    android:id="@+id/menuHistorico"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu_ic"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Histórico"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="30sp"
                    android:textColor="@color/backgroundColor"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>

            </RelativeLayout>

           <ImageView
               android:layout_width="400dp"
               android:layout_height="200dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="120dp"
               android:src="@drawable/img_11"/>

            <TextView
                android:id="@+id/textViewHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="350dp"
                android:text="A WorldSkills começou em 1950, em Madrid,
                Espanha, como uma forma de promover a formação técnica entre
                os jovens. O evento nasceu de uma colaboração entre a Espanha e
                Portugal para incentivar a educação técnica e atender à necessidade
                 de profissionais qualificados após a Segunda Guerra Mundial.
                 A primeira competição contou com 12 competidores de apenas dois países."
                android:fontFamily="@font/poppins"
                android:layout_marginStart="16dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/historicoBtnH"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="550dp"
                android:backgroundTint="@color/blueDark"
                app:shapeAppearance="@drawable/time_ic"
                android:src="@drawable/time_ic" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/categoriesBtnH"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/categories_ic"
                app:shapeAppearance="@drawable/categories_ic"
                android:backgroundTint="@color/blueDark"
                android:layout_marginStart="180dp"
                android:layout_marginTop="550dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/airplaneBtnH"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="550dp"
                app:shapeAppearance="@drawable/airplane_ic"
                android:backgroundTint="@color/blueDark"
                android:src="@drawable/airplane_ic"
                />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navViewHistorico"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_all"/>



</androidx.drawerlayout.widget.DrawerLayout>